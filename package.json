{
  "name": "sistema-informatica",
  "version": "1.0.0",
  "description": "Sistema de gestão de chamados técnicos na área de informática",
  "main": "index.js",
  "scripts": {
    "start": "node backend/server.js",
    "server": "nodemon backend/server.js",
    "client": "npm start --prefix frontend",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "install-backend": "npm install",
    "install-frontend": "npm install --legacy-peer-deps --prefix frontend",
    "install-all": "npm run install-backend && npm run install-frontend",
    "build": "npm run build --prefix frontend",
    "postinstall": "npm run install-frontend && npm run build --prefix frontend && node scripts/reset-db.js",
    "backup": "node scripts/backup.js",
    "seed": "node scripts/seed.js",
    "db:reset": "node scripts/reset-db.js",
    "test": "cd backend && jest",
    "test:watch": "cd backend && jest --watch",
    "test:coverage": "cd backend && jest --coverage",
    "test:frontend": "cd frontend && npm test",
    "test:all": "npm run test && npm run test:frontend"
  },
  "keywords": [
    "informatica",
    "chamados",
    "tecnicos",
    "suporte"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@sentry/node": "^10.27.0",
    "axios": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^6.11.2",
    "express-slow-down": "^3.0.1",
    "express-validator": "^7.0.1",
    "fs": "^0.0.1-security",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "https": "^1.0.0",
    "ioredis": "^5.8.2",
    "joi": "^18.0.2",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.10.1",
    "multer": "^1.4.5-lts.1",
    "node-cache": "^5.1.2",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.6",
    "passport": "^0.6.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-microsoft": "^1.0.0",
    "pdfkit": "^0.15.0",
    "pg": "^8.11.3",
    "qrcode": "^1.5.4",
    "rate-limiter-flexible": "^9.0.0",
    "selfsigned": "^3.0.1",
    "sharp": "^0.34.5",
    "socket.io": "^4.8.1",
    "speakeasy": "^2.0.0",
    "stripe": "^12.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "web-push": "^3.6.7",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0",
    "xss": "^1.0.15",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/supertest": "^6.0.3",
    "concurrently": "^8.0.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-node": "^11.1.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "nodemon": "^3.1.11",
    "prettier": "^3.7.3",
    "prom-client": "^15.1.3",
    "supertest": "^7.1.4"
  },
  "engines": {
    "node": "20.x",
    "npm": ">=8"
  }
}
