NODE_ENV=production
PORT=5000

# JWT (mínimo 32 caracteres em produção - CRÍTICO!)
JWT_SECRET=troque_por_uma_chave_segura_de_pelo_menos_32_caracteres_aleatorios

# Banco de Dados (Render/Postgres)
DB_TYPE=postgres
DATABASE_URL=postgres://usuario:senha@host:5432/nome_banco
POSTGRES_SSL=true

# MongoDB (fallback em dev/local)
MONGO_URI=mongodb://127.0.0.1:27017/sistema-informatica

# CORS (lista separada por vírgula)
ALLOWED_ORIGINS=https://seu-frontend.onrender.com,https://seu-backend.onrender.com

# Stripe (produção)
STRIPE_SECRET_KEY=sk_live_xxx
STRIPE_CURRENCY=brl
AD_FREE_PRICE_PER_MONTH_BRL=9.9

# HTTPS opcional (self-signed)
ENABLE_HTTPS=false
SSL_KEY_PATH=ssl/key.pem
SSL_CERT_PATH=ssl/cert.pem

# Logging (info, warn, error, debug)
LOG_LEVEL=info

# Trust Proxy (para rate limiting em produção atrás de proxy/load balancer)
TRUST_PROXY=true

# Modo Demo (apenas para testes - NÃO usar em produção)
DEMO_MODE=false
ALLOW_MULTI_SESSION=false